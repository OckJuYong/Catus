# ===================================
# Catus Backend Environment Variables
# ===================================
# 이 파일을 .env로 복사하고 실제 값을 입력하세요
# cp .env.example .env

# ===================================
# JWT Configuration (필수)
# ===================================
# 최소 32자 이상의 비밀 키 (256 bits)
JWT_SECRET=change_this_to_your_super_secret_jwt_key_at_least_32_characters_long

# ===================================
# Kakao OAuth (필수)
# ===================================
# Kakao Developers에서 발급: https://developers.kakao.com/
KAKAO_CLIENT_ID=your_kakao_rest_api_key_here
KAKAO_CLIENT_SECRET=your_kakao_client_secret_here
KAKAO_REDIRECT_URI=http://localhost:8080/api/v1/auth/callback

# ===================================
# Gemini API (필수 - AI 챗봇용)
# ===================================
# Google AI Studio에서 발급: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent

# ===================================
# OpenAI DALL-E API (필수 - 이미지 생성용)
# ===================================
# OpenAI Platform에서 발급: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1/images/generations

# ===================================
# AWS S3 (필수 - 프로필 이미지 저장용)
# ===================================
# AWS IAM에서 Access Key 발급
AWS_S3_BUCKET=catus-diary-images
AWS_S3_REGION=ap-northeast-2
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_SECRET_KEY=your_aws_secret_key_here

# ===================================
# Database - PostgreSQL (선택)
# ===================================
# Docker 사용 시 기본값 사용
# 직접 설치 시 아래 값 수정
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/catus_db
SPRING_DATASOURCE_USERNAME=catus_user
SPRING_DATASOURCE_PASSWORD=catus_pass

# ===================================
# Redis (선택)
# ===================================
# Docker 사용 시 기본값 사용
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=

# ===================================
# Firebase (선택 - 푸시 알림용)
# ===================================
# Firebase Console에서 service account JSON 다운로드
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
FIREBASE_ENABLED=false

# ===================================
# Server Configuration (선택)
# ===================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=local
